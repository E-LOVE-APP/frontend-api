{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Poetry Shell",
      "type": "shell",
      "command": "${config:terminal.integrated.shell.windows}",
      "args": [
        "${config:terminal.integrated.shellArgs.windows}",
        "-c",
        "cd e-love-frontend-api && poetry shell"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "powershell",
        "args": ["-Command", "cd e-love-frontend-api; poetry shell"]
      },
      "linux": {
        "command": "bash",
        "args": ["-c", "cd e-love-frontend-api && poetry shell"]
      },
      "osx": {
        "command": "bash",
        "args": ["-c", "cd e-love-frontend-api && poetry shell"]
      }
    }
  ]
}
